easyblock = 'CMakeMake'

name = 'ITK'
version = '4.13.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://itk.org'
description = """Insight Segmentation and Registration Toolkit (ITK) provides
 an extensive suite of software tools for registering and segmenting
 multidimensional imaging data."""

toolchain = {'name': 'foss', 'version': '2018a'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/InsightSoftwareConsortium/ITK/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['37122d65b89699df33f34e0859f1e7adf5a6222060dc1c47383ff7aa4531223a']

builddependencies = [
    ('CMake', '3.10.2'),
    ('Bison', '3.0.4'),
    ('googletest', '1.8.0'),
]

dependencies = [
    ('Python', '3.6.4'),
    ('HDF5', '1.10.1'),
    ('PCRE', '8.41'),
    ('SWIG', '3.0.12', versionsuffix),
    ('VTK', '8.1.0', versionsuffix),
    ('X11', '20180131'),
    ('zlib', '1.2.11'),
    ('libjpeg-turbo', '1.5.3'),
    ('libpng', '1.6.34'),
    ('LibTIFF', '4.0.9'),
    ('CastXML', '20180806'),
    ('double-conversion', '3.0.3'),
    ('KWIML', '20180201'),
    ('VXL', '1.18.0'),
    ('GDCM', '2.8.8'),
    ('MINC', '2.4.03'),
]

configopts = '-DCMAKE_BUILD_TYPE=Release -DITK_WRAP_PYTHON=ON '
# -DITK_USE_SYSTEM_LIBRARIES applies to zlib, googletest, JPEG, HDF5, expat, PNG, TIFF, SWIG
configopts += '-DITK_USE_SYSTEM_LIBRARIES=ON ' #-DITK_FORBID_DOWNLOADS=ON '
configopts += '-DGIT_EXECUTABLE=$(which git) '
configopts += '-DITK_USE_SYSTEM_FFTW=ON -DITK_USE_SYSTEM_DCMTK=ON '
configopts += '-DITK_USE_SYSTEM_MINC=ON -DLIBMINC_DIR=$EBROOTMINC/lib '
configopts += '-DITK_USE_SYSTEM_GDCM=ON -DGDCM_DIR=$EBROOTGDCM/lib/gdcm-2.8/ '
configopts += '-DITK_USE_SYSTEM_KWIML=ON -DKWIML_DIR=$EBROOTKWIML/share/cmake/kwiml-1.0 '
configopts += '-DITK_USE_SYSTEM_VXL=ON -DVXL_DIR=$EBROOTVXL/share/vxl/cmake '
configopts += '-DITK_USE_SYSTEM_DOUBLECONVERSION=ON -DITK_USE_SYSTEM_CASTXML=ON '
configopts += '-DGTEST_ROOT=$EBROOTGOOGLETEST -DBUILD_TESTING=OFF '
configopts += '-DModule_ITKReview=ON -DModule_ITKVtkGlue=ON '

preinstallopts = "export PYTHONPATH=%(installdir)s/lib/python%(pyshortver)s/site-packages:$PYTHONPATH && "

separate_build_dir = True

modextrapaths = {'PYTHONPATH': ['lib/python%(pyshortver)s/site-packages']}

sanity_check_paths = {
    'files': ['bin/itkTestDriver',
              'lib/libITKVtkGlue-%(version_major_minor)s.a',
              'lib/libitkopenjpeg-%(version_major_minor)s.a'],
    'dirs': ['include/ITK-%(version_major_minor)s',
             'lib/python%(pyshortver)s/site-packages',
             'share'],
}

sanity_check_commands = [('python', "-c 'import %(namelower)s'")]

moduleclass = 'data'
