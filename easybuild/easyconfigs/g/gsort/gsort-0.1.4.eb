easyblock = 'Binary'

name = 'gsort'
version = '0.1.4'

homepage = 'https://github.com/brentp/gsort'
description = "gsort is a tool to sort genomic files according to a genomefile"

toolchain = SYSTEM

source_urls = ['https://github.com/brentp/gsort/releases/download/v%(version)s']
sources = [{'download_filename': 'gsort_linux_amd64', 'filename': 'gsort-%(version)s_linux_amd64'}]
checksums = ['c8f9cf67b4ff7036a65782b9ea2717db5294c534ddaeb91ea5bf9dac3c614d07']

install_cmd = "mkdir -p %(installdir)s/bin && cp -a gsort-%(version)s_linux_amd64 %(installdir)s/bin/gsort"

sanity_check_paths = {
    'files': ['bin/gsort'],
    'dirs': [],
}

sanity_check_commands = ["gsort --help"]

moduleclass = 'bio'
